
@{
    ViewData["Title"] = "Analytics & Reports";
}

<div class="container">
    <!-- Breadcrumbs -->
    <nav aria-label="breadcrumb" class="mb-8">
        <ol class="flex items-center space-x-2">
            <li class="flex items-center">
                <a href="@Url.Action("Index", "Home")" class="text-gray-500 hover:text-blue-500 transition-colors duration-200">
                    <i class="fas fa-home text-sm"></i>
                    <span class="ml-1">Home</span>
                </a>
            </li>
            <li class="flex items-center">
                <i class="fas fa-chevron-right text-gray-400 text-sm mx-2"></i>
                <span class="text-gray-400">
                    <i class="fas fa-chart-bar text-sm"></i>
                    <span class="ml-1">Analytics</span>
                </span>
            </li>
        </ol>
    </nav>

    <!-- Header -->
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-800 mb-2">@ViewData["Title"]</h1>
        <p class="text-gray-600">Analyze your spending patterns and trends</p>
    </div>

    <!-- Analysis Tools -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
        <!-- Expense Breakdown Card -->
        <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Expense Breakdown</h3>
            <div class="space-y-3">
                <div class="flex justify-between items-center p-3 bg-gray-50 rounded-xl">
                    <span class="text-gray-700">Travel</span>
                    <span class="font-medium text-blue-600">30%</span>
                </div>
                <!-- Add more category items -->
            </div>
        </div>

        <!-- Filter Controls -->
        <div class="lg:col-span-2 bg-white rounded-2xl p-6 shadow-sm border border-gray-100">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Date Range</label>
                    <div class="grid grid-cols-2 gap-2">
                        <input type="date" class="w-full bg-gray-50 border border-gray-200 rounded-xl px-4 py-2.5" placeholder="From" />
                        <input type="date" class="w-full bg-gray-50 border border-gray-200 rounded-xl px-4 py-2.5" placeholder="To" />
                    </div>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Category</label>
                    <select class="w-full bg-gray-50 border border-gray-200 rounded-xl px-4 py-2.5">
                        <option>All Categories</option>
                        <!-- Add categories dynamically -->
                    </select>
                </div>
            </div>
            <div class="flex gap-2 mt-4">
                <button class="px-6 py-2.5 bg-blue-500 text-white rounded-xl hover:bg-blue-600 transition-all duration-200">
                    <i class="fas fa-filter mr-2"></i>Apply Filters
                </button>
                <button class="px-6 py-2.5 bg-gray-100 text-gray-700 rounded-xl hover:bg-gray-200 transition-all duration-200">
                    <i class="fas fa-print mr-2"></i>Export Report
                </button>
            </div>
        </div>
    </div>

    <!-- Expense Trends Chart -->
    <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100 mb-8">
        <h3 class="text-lg font-semibold text-gray-800 mb-4">Expense Trends</h3>
        <div class="h-[400px]">
            <canvas id="expenseTrendsChart"></canvas>
        </div>
    </div>

    <!-- Detailed Analysis Table -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="flex justify-between items-center p-6 border-b border-gray-100">
            <h3 class="text-lg font-semibold text-gray-800">Detailed Analysis</h3>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead>
                    <tr class="bg-gray-50 border-b border-gray-100">
                        <th class="text-left text-sm font-semibold text-gray-600 p-4">Title</th>
                        <th class="text-left text-sm font-semibold text-gray-600 p-4">Category</th>
                        <th class="text-right text-sm font-semibold text-gray-600 p-4">Amount</th>
                        <th class="text-left text-sm font-semibold text-gray-600 p-4">Date</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Add dynamic data rows -->
                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Initialize chart with modern styling
        const ctx = document.getElementById('expenseTrendsChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['November', 'October', 'September', 'August'],
                datasets: [{
                    label: 'Expenses',
                    data: [100, 75, 50, 90],
                    backgroundColor: '#3B82F6',
                    borderRadius: 6
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'top',
                        align: 'end'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            display: true,
                            color: '#f3f4f6'
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        }
                    }
                }
            }
        });
    </script>
}

<style>
    /* General container styling */
    .container {
        margin-top: 10px;
        padding: 10px;
    }

    .header h1 {
        font-size: 1.5em;
        font-weight: bold;
        color: #333;
    }

    /* Flex layout for main content */
    .summary-container {
        display: flex;
        gap: 20px;
        align-items: flex-start;
    }

    /* Expense Breakdown card styling */
    .expense-breakdown {
        width: 250px;
        padding: 15px;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

        .expense-breakdown h5 {
            font-size: 1.25em;
            margin-bottom: 10px;
        }

    .list-group {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .list-group-item {
        display: flex;
        justify-content: space-between;
        padding: 10px 0;
        border-bottom: 1px solid #e9ecef;
        font-size: 0.9em;
    }

        .list-group-item:last-child {
            border-bottom: none;
        }

    /* Table container and filter styling */
    .table-container {
        width: 75%; /* Adjust width as needed */
        margin-left: auto;
        margin-right: auto;
    }
     
</style>
