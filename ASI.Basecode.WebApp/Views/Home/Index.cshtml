@{
    ViewData["Title"] = "Home Page";
}

<h2 class="mb-4 fw-bold">Dashboard</h2>

<div class="row my-4">
    <div class="col-md-4 col-sm-6 col-12 mb-3">
        <div class="metric-card shadow-sm">
            <h5>Total Expenses</h5>
            <h3 class="cards-title">P 10,950.00</h3>
        </div>
    </div>
    <div class="col-md-4 col-sm-6 col-12 mb-3">
        <div class="metric-card shadow-sm">
            <h5>Highest Expense <span class="badge bg-transparent text-secondary">Travel</span></h5>
            <h3 class="cards-title">P 19,623.00</h3>
        </div>
    </div>
    <div class="col-md-4 col-sm-6 col-12 mb-3">
        <div class="metric-card shadow-sm">
            <h5>Newly Added <span class="badge bg-transparent text-secondary">School</span></h5>
            <h3 class="cards-title">P 100.00</h3>
            <p class="mb-0">G-tech pen</p>
        </div>
    </div>
</div>

<h4>Recent Expenses</h4>
<div class="table-responsive">
    <table class="table table-striped-1 table-hover">
        <thead style="background-color: #FBFBFB;">
            <tr>
                <th>TITLE</th>
                <th>CATEGORY</th>
                <th>AMOUNT</th>
                <th>CREATION DATE</th>
            </tr>
        </thead>
        <tbody>
            <tr style="background-color: #FBFBFB;">
                <td>Trip to Busan</td>
                <td>Travel</td>
                <td>P19,623.00</td>
                <td>Mar 23, 2022, 13:00 PM</td>
            </tr>
            <tr>
                <td>Ingredients for Dinner</td>
                <td>Grocery</td>
                <td>P8,960.00</td>
                <td>Mar 23, 2022, 13:00 PM</td>
            </tr>
            <tr style="background-color: #FBFBFB;">
                <td>G-tech Pen</td>
                <td>School</td>
                <td>P100.00</td>
                <td>Mar 23, 2022, 13:00 PM</td>
            </tr>
            <tr>
                <td>Dimsum Break</td>
                <td>Eating Outside</td>
                <td>P230.00</td>
                <td>Mar 23, 2022, 13:00 PM</td>
            </tr>
            <tr style="background-color: #FBFBFB;">
                <td>Paracetamol - Medicine</td>
                <td>Health Care</td>
                <td>P623.00</td>
                <td>Mar 23, 2022, 13:00 PM</td>
            </tr>
        </tbody>
    </table>
</div>

<style>
    .cards-title {
        color: rgba(55, 65, 81, 1);
    }

    .metric-card {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        padding: 20px;
        background-color: #FFFFFF;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        width: 100%;
        height: 180px;
    }

    .metric-card h5 {
        font-size: 2rem;
        font-weight: 600;
        color: #3A3A3A;
        margin-bottom: 8px;
    }

    .metric-card h3 {
            font-size: 2rem;
        font-weight: bold;
        color: #333333;
        margin: 0;
    }

    .metric-card .badge {
        font-size: 0.85rem;
        color: #5A5A5A;
        background-color: transparent;
        font-weight: 500;
        margin-top: 4px;
    }

    .metric-card p {
        font-size: 0.9rem;
        color: #5A5A5A;
        margin: 0;
        margin-top: 4px;
    }

    .table-responsive {
        overflow-x: auto;
    }

    @@media (max-width: 768px) {
        .metric-card {
            height: auto;
            padding: 15px;
        }

        .metric-card h5 {
            font-size: 1rem;
        }

        .metric-card h3 {
            font-size: 2rem;
        }
    }

    .table-striped > tbody > tr:nth-of-type(odd) {
        background-color: #FBFBFB;
    }

</style>
