@{
    ViewData["Title"] = "Dashboard";
}

<div class="container">
    <!-- Breadcrumbs -->
    <nav aria-label="breadcrumb" class="mb-8">
        <ol class="flex items-center space-x-2">
            <li class="flex items-center">
                <span class="text-gray-500">
                    <i class="fas fa-home text-sm"></i>
                    <span class="ml-1">Home</span>
                </span>
            </li>
            <li class="flex items-center">
                <i class="fas fa-chevron-right text-gray-400 text-sm mx-2"></i>
                <span class="text-gray-400">
                    <i class="fas fa-chart-pie text-sm"></i>
                    <span class="ml-1">Dashboard</span>
                </span>
            </li>
        </ol>
    </nav>

    <!-- Header -->
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-800 mb-2">@ViewData["Title"]</h1>
        <p class="text-gray-600">Overview of your financial activities</p>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-gray-600 text-sm font-medium">Total Expenses</h3>
                <span class="text-blue-500 bg-blue-50 p-2 rounded-lg">
                    <i class="fas fa-wallet"></i>
                </span>
            </div>
            <p class="text-2xl font-bold text-gray-800">₱10,950.00</p>
        </div>

        <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-gray-600 text-sm font-medium">Highest Expense</h3>
                <span class="text-green-500 bg-green-50 p-2 rounded-lg">
                    <i class="fas fa-plane"></i>
                </span>
            </div>
            <p class="text-2xl font-bold text-gray-800">₱19,623.00</p>
            <span class="text-sm text-gray-500">Travel</span>
        </div>

        <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-gray-600 text-sm font-medium">Latest Expense</h3>
                <span class="text-purple-500 bg-purple-50 p-2 rounded-lg">
                    <i class="fas fa-clock"></i>
                </span>
            </div>
            <p class="text-2xl font-bold text-gray-800">₱100.00</p>
            <span class="text-sm text-gray-500">G-tech pen (School)</span>
        </div>
    </div>

    <!-- Recent Expenses Table -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="flex justify-between items-center p-6 border-b border-gray-100">
            <h2 class="text-lg font-semibold text-gray-800">Recent Expenses</h2>
            <a href="@Url.Action("Index", "Expense")" class="text-blue-500 hover:text-blue-600 transition-colors duration-200">
                View All <i class="fas fa-arrow-right ml-1"></i>
            </a>
        </div>

        <div class="overflow-x-auto">
            <table class="w-full">
                <thead>
                    <tr class="bg-gray-50 border-b border-gray-100">
                        <th class="text-left text-sm font-semibold text-gray-600 p-4">Title</th>
                        <th class="text-left text-sm font-semibold text-gray-600 p-4">Category</th>
                        <th class="text-right text-sm font-semibold text-gray-600 p-4">Amount</th>
                        <th class="text-left text-sm font-semibold text-gray-600 p-4">Date</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="border-b border-gray-50 hover:bg-gray-50 transition-colors duration-200">
                        <td class="p-4 text-gray-800">Trip to Busan</td>
                        <td class="p-4">
                            <span class="px-3 py-1 rounded-full text-sm bg-blue-50 text-blue-600">
                                Travel
                            </span>
                        </td>
                        <td class="p-4 text-right font-medium">₱19,623.00</td>
                        <td class="p-4 text-gray-600">Mar 23, 2022</td>
                    </tr>
                    <tr class="border-b border-gray-50 hover:bg-gray-50 transition-colors duration-200">
                        <td class="p-4 text-gray-800">Ingredients for Dinner</td>
                        <td class="p-4">
                            <span class="px-3 py-1 rounded-full text-sm bg-green-50 text-green-600">
                                Grocery
                            </span>
                        </td>
                        <td class="p-4 text-right font-medium">₱8,960.00</td>
                        <td class="p-4 text-gray-600">Mar 23, 2022</td>
                    </tr>
                    <!-- Add more rows following the same pattern -->
                </tbody>
            </table>
        </div>
    </div>
</div>

