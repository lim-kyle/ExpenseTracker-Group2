   @model ASI.Basecode.Data.Models.Expense
   @inject ASI.Basecode.Data.Interfaces.ICategoryRepository CategoryRepository

@{
    ViewData["Title"] = "Add Expense";
    var userId = User.Claims.FirstOrDefault(c => c.Type == "UserId")?.Value;
    var categories = CategoryRepository.GetCategoriesByUserId(int.Parse(userId)).ToList();
}

<div class="container mt-5">
    <h1 class="text-danger">@ViewData["Title"]</h1>
    <form asp-action="AddExpenses" method="post">
        <div class="mb-3">
            <label for="ExpenseTitle" class="form-label">Expense Title</label>
            <input type="text" class="form-control" id="ExpenseTitle" name="ExpenseTitle" required maxlength="100" />
            <div class="invalid-feedback">Please provide a title for the expense.</div>
        </div>

        <div class="mb-3">
            <label for="CategoryId" class="form-label">Category</label>
            <select class="form-control" id="CategoryId" name="CategoryId" required>
                <option value="">Select a category</option>
                @foreach (var category in categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
            <div class="invalid-feedback">Please select a category for the expense.</div>
        </div>

        <div class="mb-3">
            <label for="Amount" class="form-label">Amount</label>
            <input type="number" class="form-control" id="Amount" name="Amount" required step="0.01" min="0" />
            <div class="invalid-feedback">Please provide a valid amount.</div>
        </div>

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-danger me-2">Add Expense</button>
            <a href="@Url.Action("Index", "Expense")" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

<style>
    body {
        background-color: #ffffff;
        font-family: 'Arial', sans-serif;
    }

    h1 {
        font-weight: bold;
    }

    .btn {
        border-radius: 20px;
    }
</style>
